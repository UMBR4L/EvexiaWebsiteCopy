{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  },
  "include": ["src/**/*.ts", "./*.js", "test/**/*.ts"]
}
